<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/ripple_highlight</item>
    </style>

    <style name="TitleList" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ComposerList" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Heading" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="FilterCategory" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="InfoSubTitle" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="InfoItem" parent="@android:style/TextAppearance">
        <item name="android:layout_marginStart">8dp</item>
    </style>
</resources>
